echo -e "--- Attempting to boost your bash..."

echo -e "bash_profile...\c"

echo -e "bashrc...\c"
source ~/.bashrc

echo -e "version control boost...\c"
source ~/.bash_boost/bash_vcs.sh

echo -e "bash_login...\c"
source ~/.bash_login

echo -e "cd command boost...\c"
source ~/.bash_boost/cdargs-bash.sh
source ~/.bash_boost/cdargs.sh

echo -e "history boost...\c"
source ~/.history

echo -e "terminal_colors...\c"
source ~/.bash_boost/terminal_colors

echo -e "environment...\c"
source ~/.os_specific/environment

echo -e "emacs_server...\c"
source ~/.bash_boost/emacs_server

echo "paths..."
source ~/.os_specific/paths

echo "user specific boost..."
source ~/.user_specific/loader

echo "--- Boost process Successful and Complete!"
